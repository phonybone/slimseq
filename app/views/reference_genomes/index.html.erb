<h1>Listing Reference Genomes</h1>

<%= link_to 'New Reference Genome', new_reference_genome_path %>

<table id="table" class="sortable" cellpadding="0" cellspacing="0" border="0">
  <thead>
    <tr>
      <th><h3>Description</h3></th>
      <th><h3>Shorthand Name</h3></th>
      <th><h3>Organism</h3></th>
      <th><h3>FASTA File</h3></th>
      <th><h3 class="nosort">Edit</h3></th>
      <th><h3 class="nosort">Destroy</h3></th>
    </tr>
  </thead>
<% for reference_genome in @reference_genomes %>
  <tr>
    <td><%=h reference_genome.description %></td>
    <td><%=h reference_genome.name %></td>
    <td><%=h reference_genome.organism.name %></td>
    <td><%=h reference_genome.fasta_path %></td>
    <td><%= link_to 'Edit', edit_reference_genome_path(reference_genome) %></td>
    <td><%= link_to 'Destroy', reference_genome, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<%= render :partial => 'shared/tinytable', :locals => {:sort_column => 0} %>
