<h1>Gerald Configuration File: <%=h @sequencing_run.run_name %></h1>

<p><%= link_to 'Download Config File', :action => 'download',
               :sequencing_run_id => @sequencing_run.id %></p>

<code>
ANALYSIS eland_extended<br>
SEQUENCE_FORMAT --fasta<br>
ELAND_MULTIPLE_INSTANCES 8<br>
QF_PARAMS '(NEIGHBOUR >=2.0) && (CHASTITY >= 0.6)'<br>
<% @lanes.keys.sort.each do |i| %>
<% hash = @lanes[i]  %>
  <%=h "#{hash[:lane_number]}:ELAND_GENOME #{hash[:eland_genome]}" %><br>
  <%=h "#{hash[:lane_number]}:ELAND_SEED_LENGTH #{hash[:eland_seed_length]}" %><br>
  <%=h "#{hash[:lane_number]}:ELAND_MAX_MATCHES #{hash[:eland_max_matches]}" %><br>
  <%=h "#{hash[:lane_number]}:USE_BASES #{hash[:use_bases]}" %><br>
<% end  %>
</code>