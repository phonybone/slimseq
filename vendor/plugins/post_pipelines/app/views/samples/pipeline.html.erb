<h2>Launch pipeline for sample <%= @sample.name_on_tube %></h2>

<%= render :partial=>'experiments/pps_for_sample', :locals=>{:sample=>@sample} %>

<% form_for :post_pipeline, :url=>{:controller=>:post_pipelines, :action=>:launch_sample, :id=>nil} do |form| %>
<%= hidden_field_tag :sample_id, @sample.id %>
<%= render :partial=>'experiments/post_pipeline_params', :locals => {:sample=>@sample} %>
<% if @disable_launch %>
<p>
  The RNASeq pipeline cannot be run on this sample: <%= @why_disabled %></p>
<% end %>
<p><%= form.submit "Launch Pipeline", :disabled=>@disable_launch %></p>
<% end %>
